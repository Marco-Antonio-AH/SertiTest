<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
    </style>

    <style name="Theme.MyApp.Login" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_gradient</item>
        <item name="colorPrimary">@color/gradient_start</item>
        <item name="colorPrimaryVariant">@color/gradient_end</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorSecondary">@color/gradient_end</item>
    </style>

    <style name="Widget.MyApp.TextInput.Outlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/input_stroke</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius</item>
        <item name="hintTextColor">@color/on_primary</item>
        <item name="helperTextTextColor">@color/on_primary</item>
        <item name="android:textColor">@color/on_primary</item>
    </style>

    <style name="Widget.MyApp.Button.Login" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:insetLeft">@dimen/spacing</item>
        <item name="android:insetRight">@dimen/spacing</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.Serti.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_gradient</item>
    </style>


</resources>
